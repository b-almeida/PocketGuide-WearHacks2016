<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brunoalmeida.wearhacks2016.MainActivity">
    <!-- android:background="#0099cc" -->


    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <TextView
        android:id="@+id/debug_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Hello World!"
        android:textColor="@android:color/white"
        android:layout_gravity="left|top"
        android:textSize="24sp"
        android:fontFamily="Arial"/>

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SickKids Hospital"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center|top"
        android:textSize="48sp"
        android:fontFamily="Arial" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/down_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_arrow_downward_white_48dp"
        android:minWidth="@dimen/arrow_dimen"
        android:minHeight="@dimen/arrow_dimen"/>


    <ImageView
        android:visibility="invisible"
        android:id="@+id/up_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_arrow_upward_white_48dp"
        android:minWidth="@dimen/arrow_dimen"
        android:minHeight="@dimen/arrow_dimen"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_chevron_right_white_48dp"
        android:minWidth="@dimen/arrow_dimen"
        android:minHeight="@dimen/arrow_dimen"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_chevron_left_white_48dp"
        android:minWidth="@dimen/arrow_dimen"
        android:minHeight="@dimen/arrow_dimen"/>



